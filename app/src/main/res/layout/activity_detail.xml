<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".module.home_page.view.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detailPageImageView1"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flight_toolbar_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailPageCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight App"
            android:textColor="@color/white"
            android:textSize="43sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/detailPageImageView1"
            app:layout_constraintEnd_toEndOf="@+id/detailPageImageView1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detailPageImageView1" />

        <ImageView
            android:id="@+id/detailPageAirbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/airbus"
            app:layout_constraintBottom_toBottomOf="@+id/detailPageImageView1"
            app:layout_constraintStart_toStartOf="@+id/detailPageImageView1"
            app:layout_constraintTop_toBottomOf="@+id/detailPageImageView1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detailPageCloseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:icon="@drawable/ic_baseline_close_32"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@+id/detailPageAirbus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@color/flight_appbar_blue">

                    <TextView
                        android:id="@+id/detailDepartureAirportIata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="25dp"
                        android:text="BKK"
                        android:textColor="@color/white"

                        android:textSize="40sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/detailDepartureAirport"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detailDepartureAirportIata"
                        android:layout_alignStart="@+id/detailDepartureAirportIata"
                        android:layout_marginBottom="45dp"
                        android:text="Wellington International"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/detailDepartureTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/detailDepartureAirportIata"
                        android:layout_marginBottom="35dp"
                        android:text="Wed, Mar 10 \n04:00"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/detailArrivalAirportIata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="45dp"
                        android:text="PVG"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detailArrivalAirport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detailArrivalAirportIata"
                        android:layout_alignStart="@id/detailArrivalAirportIata"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="45dp"
                        android:text="Wellington International"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/detailArrivalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/detailArrivalAirport"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="35dp"
                        android:text="Wed, Mar 10 \n04:00"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/detailPageFlightCode2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:text="TextView"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/detailPageTerminalNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detailPageFlightCode2"
                        android:layout_alignStart="@id/detailPageFlightCode2"

                        android:text="TextView"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/detailPageGateNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="25dp"
                        android:text="TextView"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/detailPageSeatNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detailPageGateNumber"
                        android:layout_alignEnd="@id/detailPageGateNumber"
                        android:text="TextView"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/detailPageSeatNumber"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/border" />

                </RelativeLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
