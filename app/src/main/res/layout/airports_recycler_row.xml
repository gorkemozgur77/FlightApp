<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="168dp"
        android:layout_height="240dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_centerInParent="true"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/airportCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                android:text="AAA"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/airportNameTextView"
                android:layout_below="@+id/airportCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                android:textColor="@color/dark_blue"
                android:text="Anaa"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/airportCountryTextView"
                android:layout_below="@+id/airportNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/dark_blue"
                android:textSize="22sp"
                android:text="French Polynesia"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_above="@id/locatincallLinearLayout"
                android:backgroundTint="@color/dark_blue"
                android:background="@drawable/dotted_line"/>

            <LinearLayout
                android:id="@+id/locatincallLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/googleLocationButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="5"
                    app:iconGravity="textStart"
                    app:iconTint="@color/black"
                    app:icon="@drawable/ic_baseline_location_on_36"
                    android:background="@android:color/transparent"/>

                <View
                    android:layout_width="55dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/callButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="5"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/black"
                    app:icon="@drawable/ic_baseline_call_36"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
